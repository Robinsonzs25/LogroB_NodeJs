      <div class="card-header">
        <h3 class="card-title">Gestion Empleado</h3>
        </div>
          <div class="card-body">
            <div id="example1_wrapper" class="dataTables_wrapper dt-bootstrap4"><div class="row"><div class="col-sm-12 col-md-6"> </div><div class="col-sm-12 col-md-6"><div id="example1_filter" class="dataTables_filter"></label></div></div></div><div class="row"><div class="col-sm-12"><table id="example1" class="table table-bordered table-striped dataTable dtr-inline collapsed" role="grid" aria-describedby="example1_info">
              <thead>
                <tr role="row"><th class="sorting sorting_asc" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Rendering engine: activate to sort column descending">Item</th><th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-label="Browser: activate to sort column ascending">Empleado</th><th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-label="Browser: activate to sort column ascending">fechaContratacion</th><th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-label="Browser: activate to sort column ascending">Sueldo</th><th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-label="Browser: activate to sort column ascending">horasTrabajadas</th><th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-label="Browser: activate to sort column ascending">Departamento</th></tr>
              </thead>
                <tbody>
                  <% resultados.forEach((empleados)=>{%>
                    <tr>
                      <td><%=empleados.id%></td>
                      <td><%=empleados.nombre%></td>
                      <!-- <td><%=empleados.fechaContratacion%></td> -->
                      <td>
                        <% const fechaContratacion = new Date(empleados.fechaContratacion); %>
                        <%= fechaContratacion.toLocaleDateString('es-ES', {day: 'numeric',month: 'numeric', year: 'numeric',   }) %>
                      </td>
                      <td><%=empleados.sueldo%></td>
                      <td><%=empleados.horasTrabajadas%></td>
                      <td><%=empleados.departamento%></td>
                    </tr>
                    <%})%>
                </tbody>
            </div>
          </div>
