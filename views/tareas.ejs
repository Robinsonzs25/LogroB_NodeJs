<div class="content-wrapper" >
    <div class="content-header">
        <div class="container-fluid">
          <div class="row mb-2">
          </div><!-- /.row -->
        </div><!-- /.container-fluid -->
      </div>

      <div class="col-md-6">
        <div class="card card-primary">
            <div class="card-header">
              <h3 class="card-title">Registro Tarea</h3>
            </div>
            
            <form action="/tareasf" method="post">
              <div class="card-body">
                <div class="form-group">
                  <label for="">Tipo Tarea</label>
                  <input type="text" name="tipo" class="form-control">
                </div>
              </div>
              <div class="card-body">
                <div class="form-group">
                  <label for="">Tiempo</label>
                  <input type="integer" name="tiempo" class="form-control">
                </div>
              </div>
              <div class="form-group">
                    <label for="empleado_id">Empleado</label>
                      <select name="empleado_id" required>
                        <%resultados.forEach((empleados)=>{%>
                          <option value="<%=empleados.id%>"><%=empleados.nombre%></option>
                        <%})%>
                      </select>
                  </div>
              <div class="card-footer">
                <button type="submit" class="btn btn-primary">Registrar</button>
              </div>
            </form>
          </div>
      </div>
</div>